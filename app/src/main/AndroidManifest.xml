<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.cs2340.willcode4money.shoppingwithfriend" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <permission android:name="com.example.mapdemo.permission.MAPS_RECEIVE"
                android:protectionLevel="signature" />
    <uses-permission android:name="com.example.mapdemo.permission.MAPS_RECEIVE" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.ShoppingWithFriends"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_swf"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.Register"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.MainScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.AddFriend"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_add_friend"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.ViewFriend"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_view_friends"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.DetailInfo" />
        <activity android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.SaleInfo" />
        <activity
            android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.SaleRequest"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_sale_request"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.SaleReport"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_sale_report"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.ViewItems"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_view_items"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.ViewReports"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_view_reports"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true" >
        </uses-feature>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="edu.gatech.cs2340.willcode4money.shoppingwithfriends.MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
    </application>

</manifest>
