<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.cs2340.willcode4money.shoppingwithfriends.SaleRequest"
    android:weightSum="1">

    <TextView
        android:id="@+id/report_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/title_activity_sale_report"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/report_item"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/prompt_item"
        android:inputType="text" />

    <EditText
        android:id="@+id/report_price"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/prompt_price"
        android:inputType="number" />

    <EditText
        android:id="@+id/report_location"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/prompt_location"
        android:inputType="text" />

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/report_cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_gravity="end|top"
            android:textStyle="bold"
            android:onClick="cancel" />

        <Button
            android:id="@+id/reportBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_sale_report"
            android:layout_gravity="start|top"
            android:textStyle="bold"
            android:onClick="makeReport" />

    </FrameLayout>
</LinearLayout>